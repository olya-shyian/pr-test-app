{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["@wemake-services/typescript/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": { "@typescript-eslint/explicit-function-return-type": "off" },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
